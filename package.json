{
  "name": "battleship",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "version": "1.0.0",
  "description": "Battleship application for the odin project",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "watch": "webpack --watch",
    "start": "webpack serve --open",
    "build": "webpack",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZandBraxton/BattleShip.git"
  },
  "author": "Zand Braxton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZandBraxton/BattleShip/issues"
  },
  "homepage": "https://github.com/ZandBraxton/BattleShip#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "css-loader": "^6.3.0",
    "gh-pages": "^3.2.3",
    "html-loader": "^2.1.2",
    "jest": "^27.2.1",
    "styles-loader": "^3.0.0",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  }
}
